@using MusicSmash.Models
@inherits ComponentBase

<div class="album-card">
    <div class="album-cover">
        <img src="@LeftAlbum.Cover" alt="@LeftAlbum.Name" />
    </div>
    <div class="vs-text">VS</div>
    <div class="album-cover">
        <img src="@RightAlbum.Cover" alt="@RightAlbum.Name" />
    </div>
    <div class="vote-buttons">
        <button class="btn btn-hot" @onclick="() => OnVote(LeftAlbum)">Hot</button>
        <button class="btn btn-not" @onclick="() => OnVote(RightAlbum)">Not</button>
    </div>
</div>

@code 
{
    [Parameter] public Album LeftAlbum { get; set; }
    [Parameter] public Album RightAlbum { get; set; }
    [Parameter] public Action<Album> OnVote { get; set; }
}

<style>
    .album-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .album-cover {
        margin-bottom: 10px;
    }

        .album-cover img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

    .vs-text {
        font-size: 1.2em;
        font-weight: bold;
        margin: 10px 0;
    }

    .vote-buttons {
        display: flex;
        justify-content: space-around;
        width: 100%;
    }

    .btn {
        cursor: pointer;
        padding: 10px 20px;
        font-size: 1em;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-hot {
        background-color: #1db954;
        color: #fff;
    }

    .btn-not {
        background-color: #d9534f;
        color: #fff;
    }

</style>